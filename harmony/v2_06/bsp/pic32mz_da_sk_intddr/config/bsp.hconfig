	set DRV_USART_PERIPHERAL_ID_IDX6 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_DA_SK_169LFBGA_CPU = 6 && BSP_USART_BRIDGE_PIC32MZ_DA_SK_169LFBGA_CPU)
